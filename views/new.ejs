<%- include("./partials/header") %>

<div class="row">
    <div class="col-md-12">
        <form action="/home/<%=id%>/new" method="POST">
            <legend>Add new Todo to <%=containerName%></legend>
            <div class="form-group">
                <input name="todo" type="text" autofocus class="form-control" placeholder="todo item">
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="Submit">
            </div>
        </form>
    </div>
</div>

